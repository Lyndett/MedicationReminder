<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MedicamentoReminder" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- Cambia esta línea -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- Cambia esta línea -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
